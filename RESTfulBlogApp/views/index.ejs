<% include partials/header.ejs%>
<div class="ui huge header">RESTful Blog App</div>
<div class="ui top attached segment">
    <div class="ui divided items">
        <% blogs.forEach(function(blog){ %>
            <div class="item">
                <div class="image">
                    <img src="<%= blog.image %>" alt="image not found">
                </div>
                <div class="content">
                    <a href="/blogs/<%= blog._id %>" class="header"><%= blog.title %></a>
                    <div class="meta">
                        <span><%= blog.created.toDateString() %></span>
                    </div>
                    <div class="description">
                        <% if (typeof blog.body == 'undefined' ) { %>
                            <p> no content</p>  
                        <% } else { %>
                            <p><%- blog.body.substring(0, 100) %>...</p>  
                        <% } %> 
                    </div>
                    <div class="extra">
                        <a class="ui floated basic voilet button" href="/blogs/<%= blog._id %>">
                            Read More
                            <i class="right chevron icon"></i>
                        </a>
                    </div>
                </div>
            </div>
        <% })%>        
    </div>
</div>
<% include partials/footer.ejs%>