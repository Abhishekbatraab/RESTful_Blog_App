    <div class="ui huge header">New Blog</div>
    <form class="ui form" action="/blogs" method="post">
        <div class="field">
            <label for="">Title</label>
            <input type="text" placeholder="Enter the blog name" name="blog[title]">
        </div>
        <div class="field">
            <label for="">Image</label>
            <input type="text" placeholder="Enter the Image Url" name="blog[image]">
        </div>
